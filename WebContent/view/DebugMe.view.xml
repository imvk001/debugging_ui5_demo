	xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Page showHeader="true" title="Debug Me" showFooter="true"
		enableScrolling="true">
		<content>
		
		
		<l:VerticalLayout class="sapUiResponsiveMargin">
		
		<Input placeholder="Enter first number" id="input1"/>
		<Input placeholder="Enter second number" id="input2"/>
		<Button text="Add" press="addTwoNumbers" width="100%"/>
		
		</l:VerticalLayout>

		</content>
	</Page>
</mvc:View>